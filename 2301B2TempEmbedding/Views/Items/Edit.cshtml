@model _2301B2TempEmbedding.Models.Item

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>Edit Items</h1>
<hr />
<div class="row bg-primary text-capitalize text-dark text-uppercase font-monospace fw-bold">
    <div class="col-lg-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group p-3">
                <label asp-for="Name" class="control-label">ITEM NAME</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <label asp-for="Description" class="control-label">ITEM DESCRIPTION</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <label asp-for="Price" class="control-label">ITEM PRICE</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <label asp-for="Image" class="control-label">ITEM IMAGE</label>
                <input type="file" name="image" />
            </div>
            <div class="form-group p-3">
                <label asp-for="CatId" class="control-label">CATEGORY NAME</label>
                <select asp-for="CatId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Value", "Text"))"></select>
                <span asp-validation-for="CatId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 mb-3 text-center ">
                <input type="submit" value="Save" class="btn btn-dark col-lg-11 text-center" />
            </div>
        </form>
    </div>
</div>

<div class ="mt-4">
    <a asp-action="Index">Back to List</a>
</div>

